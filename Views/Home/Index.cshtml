@{
    ViewData["Title"] = "Inicio - AppCrud";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white p-5 rounded mb-4">
                <h1 class="display-4">
                    <i class="fas fa-briefcase"></i> Bienvenido a AppCrud
                </h1>
                <p class="lead">Sistema de gestión de empleados desarrollado con ASP.NET Core y Entity Framework</p>
                <hr class="my-4 bg-white">
                <p>Administra la información de tus empleados de manera fácil y eficiente.</p>
                <a class="btn btn-light btn-lg" asp-controller="Empleados" asp-action="Index" role="button">
                    <i class="fas fa-users"></i> Ver Empleados
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Agregar Empleados</h5>
                    <p class="card-text">Registra nuevos empleados con toda su información personal y laboral.</p>
                    <a href="#" class="btn btn-primary" asp-controller="Empleados" asp-action="Create">
                        <i class="fas fa-plus"></i> Nuevo Empleado
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-list fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Lista de Empleados</h5>
                    <p class="card-text">Consulta, edita y administra toda la información de tus empleados.</p>
                    <a href="#" class="btn btn-success" asp-controller="Empleados" asp-action="Index">
                        <i class="fas fa-eye"></i> Ver Lista
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Estadísticas</h5>
                    <p class="card-text">Próximamente: Visualiza estadísticas y reportes de tus empleados.</p>
                    <button class="btn btn-secondary" disabled>
                        <i class="fas fa-chart-line"></i> Próximamente
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle"></i> Información del Sistema
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><strong>Versión:</strong> 1.0.0</li>
                                <li><strong>Tecnología:</strong> ASP.NET Core MVC</li>
                                <li><strong>Base de datos:</strong> Entity Framework Core</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><strong>Funcionalidades:</strong></li>
                                <li class="ms-3">✓ Crear empleados</li>
                                <li class="ms-3">✓ Listar empleados</li>
                                <li class="ms-3">✓ Editar empleados</li>
                                <li class="ms-3">✓ Eliminar empleados</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>